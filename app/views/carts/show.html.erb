<!-- app/views/cart/show.html.erb -->
<h1>Your Cart</h1>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart.cart_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.product.price * item.quantity) %></td>
        <td>
          <%= button_to 'Remove', cart_item_path(item), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>Total: <%= number_to_currency(@cart.cart_items.sum { |item| item.product.price * item.quantity }) %></h2>
<%= link_to 'Checkout', new_order_path, class: 'btn btn-primary'  %>

