<div id="<%= dom_id product %>" class='product-details'> 
<% if product.image? %>
        <%= image_tag(product.image.url, alt: product.name, class: "product-image", size: "200x200") %>
  <% else %>
        <p>No Image Available</p>
<% end %>
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <%
=begin%>
 <p>
    <strong>Image:</strong>
    <%= product.image %>
  </p> 
<%
=end%>
  

 

</div>
