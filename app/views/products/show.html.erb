<p style="color: green"><%= notice %></p>
<div class="productdetail">
<div>
<% if @product.image? %>
      
        <%= image_tag(@product.image.url, alt: @product.name, class: "product-image", size: "800x600") %>
         
     <% else %>
        <p>No Image Available</p>
      <% end %>
</div>
<div>

<p>
<strong>Name :  </strong>
<%= @product.name %>
</p>
<p>
<strong>Rating :  </strong>
<% 5.times do |i| %>
   <%= content_tag(:i, '', class: "fa-solid fa-star", style: "color: gold") %>
  <%end%>
</p>
<p>
    <strong>Description :  </strong>

    <%= @product.description %>
  </p>

  <p>
  <strong>Price :  </strong>

    <%= number_to_currency(@product.price) %>
   
  </p>
<div >
<% if user_signed_in? && current_user.admin? %>
<%= link_to "Edit this product", edit_product_path(@product),class:"btn" %> 
<%= link_to "Destroy  product", @product, method: :delete,class:"btn", data: { turbo_method: :delete }  %>
<%else%>
<%= link_to 'Add to Cart', cart_items_path(product_id: @product.id), method: :post,class:"btn", data: { turbo_method: :delete }  %>
<%end%>
  
  <%
=begin%>
 <%= link_to "Back to products", products_path,class:"btn" %> 
<%
=end%>
  
  
</div>
</div>







</div>

